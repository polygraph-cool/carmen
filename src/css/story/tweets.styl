.tweet
	position absolute
	background-color $fg
	color $bg
	width 15rem
	border-radius 10px
	padding 1rem
	transform translate(-50%, -105%)

	&__name
		margin 0
		font-weight 700

	&__handle
		margin 0
		margin-bottom 0.5rem
		color $gray
		set-type-size('x-small')

	&__text
		margin 0
		color $off-black

	&__time
		margin 0
		color $gray
		set-type-size('x-small')

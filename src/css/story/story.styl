/* CUSTOM STORY STYLE */

body
	font-weight 400

figure#chart
	position fixed
	top 0
	left 0
	width 100%
	z-index 3
	transition opacity 250ms ease-in-out
	
	&.is-hidden
		opacity 0
		pointer-events none

	.tweet
		opacity 0

		&.is-active
			opacity 1

		.inner
			fill white

		.mid
			fill rgba($red, .3)
			stroke rgba($red, .6)
			stroke-width 1px

		.outer
			fill none
			stroke-width 1px
			stroke $red

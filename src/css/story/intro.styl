#intro
	.intro__dots
		position fixed
		top 5%
		left 0
		width 100%
		transform translate3d(0,0,0)
		transition opacity 250ms ease-in-out
		&.is-hidden
			opacity 0
		.intro__layers
			position relative

		.bottom
			position absolute
			z-index 1

		.top
			position absolute
			z-index 2
			opacity 0
			transition 500ms

			&.is-active
				opacity 1
				transition 500ms

	.intro__overlays
		z-index 3
		position relative

	.intro__hed
		position fixed
		top auto
		bottom 1rem
		text-align: left

		&.is-hidden
			pointer-events none


		&-text
			set-type-size('xxxx-large', true)
			text-transform uppercase
			font-weight 600
			padding 0.05rem 0.75rem
			margin 0 0 0.3rem 0
			background-color $gray-darkest
			display inline-block
			z-index 3
			position relative

		img
			max-width 175px
			margin-bottom 0
			transform translateY(20px)
			position relative
			z-index 4


	.intro__steps
		z-index 3
		position relative
		max-width 25rem
		margin-left auto
		margin-right 0
		padding 1rem

		.step
			display flex
			flex-direction column
			justify-content flex-end
			padding 1rem
			opacity 0
			transition opacity 250ms ease-in-out
			min-height 480px
			&:last-of-type
				justify-content center
			&.is-visible
				opacity 1
			p
				text-shadow 0 0 3px $bg

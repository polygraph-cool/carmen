#intro
	.intro__hed
		position fixed
		bottom 1rem
		left 0

		&.is-hidden
			pointer-events none

		&-text
			font-size 5.5rem
			text-transform uppercase
			padding 0 0.75rem 0.75rem 0.75rem
			margin 0
			margin-bottom 0.75rem
			background-color $gray-darkest
			display inline-block
			position relative
			z-index set-index(bottom)
			font-family 'Akhand Soft'
			line-height 1

		img
			max-width 175px
			margin-bottom 0
			transform translateY(20px)
			position relative
			z-index set-index(middle)

	.intro__watch

		a
			display flex
			flex-direction row
			align-items: center
			padding-left 1rem
			margin-top 0.5rem
			border-bottom none

		&-text
			margin 0 0.5rem 0 0
			text-transform uppercase
			set-type-size('small', true)

		svg
			height 1.25rem
			padding 0
			width auto


	.intro__steps
		position relative
		max-width 31rem
		margin-left auto
		margin-right 0
		padding 1rem

		.step
			display flex
			flex-direction column
			justify-content flex-end
			opacity 0
			transition opacity 250ms ease-in-out
			min-height 480px
			&:first-of-type

				p
					position relative
					padding-bottom 3rem
					display block
					span
						text-transform uppercase
						font-size 14px
						position absolute
						left 1rem
						bottom .5rem
			&:last-of-type
				justify-content center
			&.is-visible
				opacity 1
			p
				//text-shadow 0 0 3px $bg
				text-align left
				font-size 16px
				background-color rgba($gray-dark, 0.75)
				padding 1rem
				border-radius 4px
				font-weight 400
				strong
					font-weight 700
					background-color rgba($netflix-red-dark, 1)
					color $fg
					padding 0 0.25em

			.cat
				padding 0 0.25rem
				border-radius 2px

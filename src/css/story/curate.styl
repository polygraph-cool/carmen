#curate
	pointer-events none

	.curate__steps
		padding 0 1rem

	.step
		max-width 20rem
		min-height 480px
		visibility hidden
		&.is-visible
			visibility visible

		&__fade
			opacity 1
			transition opacity 250ms ease-in-out
			&.is-hidden
				opacity 0
				transition opacity 250ms ease-in-out

	.step__hed
		font-family $akhand
		text-transform uppercase
		set-type-size(large, true)
		strong
			font-weight 700
			background-color rgba($netflix-red-dark, 1)
			color $fg
			padding 0 0.25em
			margin-left 0.25em
	nav
		position relative
		display flex
		flex-direction column
		.choice
			margin-bottom 1rem
			pointer-events none
		button
			pointer-events auto
			background-color transparent
			padding 0 0.5em
			border-bottom 2px solid $gray
			color $fg
			font-weight 700
			opacity 0.5
			&.cat-edutainment
				border-color $cat-edutainment
			&.cat-travel
				border-color $cat-travel
			&.cat-role-model
				border-color $cat-role-model
			&.cat-fashion
				border-color $cat-fashion
			&.is-active
				opacity 1


.g-voronoi
	path
		fill-opacity 0

.chart__curate, .chart__curate_purp
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	opacity 1
	transition opacity 250ms
	&.is-hidden
		opacity 0
	.curate__label
		position absolute
		p
			margin 0
			background-color rgba($bg, 1)
			transform translate(-50%, 50%)
			set-type-size(large, false)
			line-height 1
			color $fg
			font-family $akhand
			padding 0.5em
			border 2px solid $fg
			border-radius 4px

		&:before
			content ''
			display block
			width 1.5rem
			height 1.5rem
			border-radius 50%
			border 2px solid $fg
			position absolute
			top 0
			left 0
			transform translate(-50%, -35%)
		&.edutainment:before
			background-color $cat-edutainment
		&.fashion:before
			background-color $cat-fashion
		&.role-model:before
			background-color $cat-role-model
		&.travel:before
			background-color $cat-travel

.chart__curate_purp
	opacity .4
	transition opacity 500ms

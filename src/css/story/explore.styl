#explore
	position relative
	figure
		display flex
		flex-wrap wrap
		padding 1rem
		padding-top 5rem
	.dot
		width 5px
		height 5px
		background-color $gray-dark
		border-radius 50%
		margin 1px


	.explore__title
		position absolute
		top 0
		left 0
		width 100%
		padding 0 1rem
	
	.explore__nav
		position fixed
		bottom 0
		left 0
		padding 1rem
		width 100%
#globe
	.globe__steps
		position relative
		max-width 20rem
		margin 0
		padding 1rem
		pointer-events none
		background rgba(51, 51, 51, 0.70)

		.step
			display flex
			flex-direction column
			justify-content flex-end
			min-height 480px
			&.is-visible
				opacity 1

			&:last-of-type
				justify-content center
			p
				text-shadow 0 0 3px $bg

.airplane
	pointer-events none
	width auto
	height auto
	display block
	visibility hidden

#chart .g-globe
	path
		stroke green
		stroke-width 5px
		fill none
		visibility hidden
		display none
	text
		fill white
		display none
		text-anchor middle
		font-weight 300
		transition opacity 250ms ease-in-out

	&.is-hidden
		opacity 0

	.graticule
		fill none
		stroke $gray-light
		stroke-dasharray 4px 4px
		display none

	.border
		fill none
		stroke $gray-light

	.land
		stroke $gray-light
		fill $off-white
		fill-opacity 0.1

	.outline
		fill none
		stroke $bg
		stroke-width 3px
		// display none

	.sphere
		fill $off-black

	.country
		fill $off-white
		fill-opacity 0

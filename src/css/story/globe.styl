#globe
	.globe__steps
		position relative
		max-width 20rem
		margin 0
		padding 1rem
		pointer-events none
		background rgba(51, 51, 51, 0.70)

		.step
			display flex
			flex-direction column
			justify-content flex-end
			min-height 480px
			&:first-of-type
				.step__destination, .step__location, .destination-wrapper
					display none
			.destination-wrapper
				display flex
				svg
					width 20px
					margin-top -2px
					margin-right 10px
					path
						fill white
			.step__prose
				color #CCC
				line-height 1.3
				font-size 15px
			.step__location
				margin  0px
				font-family 'Akhand Soft'
				font-size 28px
				margin-top -5px
				color #AAA
				font-weight 600
				margin-bottom 10px
			.step__label
				margin 0px
				font-size 48px
				line-height 1

			.step__destination
				font-size 21px
				margin 0px
				text-transform uppercase
				font-family 'Akhand Soft'
			h3
				font-family 'Akhand Soft'
				text-transform uppercase
				font-size 38px
			&.is-visible
				opacity 1

			&:last-of-type
				justify-content center
			p
				text-shadow 0 0 3px $bg

.airplane
	pointer-events none
	width auto
	height auto
	display block
	visibility hidden

#chart .g-globe
	path
		stroke green
		stroke-width 5px
		fill none
		visibility hidden
		display none
	text
		fill white
		display none
		text-anchor middle
		font-weight 300
		transition opacity 250ms ease-in-out

	&.is-hidden
		opacity 0

	.graticule
		fill none
		stroke $gray-light
		stroke-dasharray 4px 4px
		display none

	.border
		fill none
		stroke $gray-light

	.land
		stroke $gray-light
		fill $off-white
		fill-opacity 0.1

	.outline
		fill none
		stroke $bg
		stroke-width 3px
		// display none

	.sphere
		fill $off-black

	.country
		fill $off-white
		fill-opacity 0
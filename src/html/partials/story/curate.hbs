<div class='curate__steps'>
	<div class='step' data-step='intro'>
		
	</div>
	<div class='step' data-step='nav'>
		<p class='step__hed'>{{{doc.curate.intro}}}</p>
		<p class='step__prose'>{{{doc.curate.nav}}}</p>
		<nav class='curate__nav' role='group'>
				{{#each doc.categories}}
				{{#if curate}}
				<div class='choice'><button class='cat-{{id}}' data-id='{{id}}'>{{label}}</button></div>
				{{/if}}
				{{/each}}
		</nav>
		<p class='step__note'>{{{doc.curate.note}}}</p>
	</div>
</div>






<figure class='explore__figure'>
	<div class='figure__dots'></div>
	<div class='figure__tweets'></div>
</figure>

<h3 class='explore__title'><span>{{{doc.explore.title}}}</span></h3>

<nav class='explore__nav is-hidden'>
		<div class='nav__choose'>
			<div class='left'>
				<p>{{{doc.explore.choose}}}</p>
				{{#each doc.categories}}
				<span data-id='{{id}}'>{{label}}</span>
				{{/each}}
			</div>
			<div class='right'>
				<button>{{{doc.explore.button}}}</button>
			</div>
			
		</div>
</nav>